<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim15"
        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginTop="@dimen/dim15"
        android:layout_marginRight="@dimen/dim20"
        android:visibility="gone" />

    <ListView
        android:id="@+id/all_application_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dim30" />

    <ProgressBar
        android:id="@+id/getRequestProgressBar"
        android:layout_width="@dimen/dim40"
        android:layout_height="@dimen/dim40"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
