<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim120"
    android:gravity="center"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/appSrc"
        android:layout_width="@dimen/dim80"
        android:layout_height="@dimen/dim80"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon01" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dim110"
        android:layout_marginLeft="@dimen/margin_big_xx"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="移动厅堂"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/appRemark"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim30"
            android:layout_below="@+id/appName"
            android:gravity="center"
            android:text="移动厅堂"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本名称："
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/appVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:text="1.2.1"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本号："
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/appVersionCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:text="1.2.1"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/appUpdateTimeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更新时间："
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/appUpdateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-12-6"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/delete_app"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim50"
        android:layout_marginLeft="@dimen/dim30"
        android:background="@drawable/button"
        android:text="卸载"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/collection_app"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim50"
        android:background="@drawable/button"
        android:text="收藏"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/update_app"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim50"
        android:layout_marginLeft="@dimen/dim30"
        android:background="@drawable/button"
        android:text="下载"
        android:textColor="@color/white"
        android:textSize="20sp" />


</LinearLayout>
